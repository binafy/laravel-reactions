{
    "name": "binafy/laravel-reactions",
    "description": "React to something in Laravel framework",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Binafy\\LaravelReaction\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Milwad",
            "email": "milwad.dev@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0|^11.0"
    },
    "require-dev": {
        "pestphp/pest-plugin-laravel": "^1.4.0|^2.0.0",
        "orchestra/testbench": "^8.0|^9.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Binafy\\LaravelReaction\\Providers\\LaravelReactionServiceProvider"
            ]
        }
    }
}
